= form_for @whishlist do |f|
  -if @whishlist.errors.any?
    #error_explanation
      %h2= "#{pluralize(@whishlist.errors.count, "error")} prohibited this movie from being saved:"
      %ul
        - @whishlist.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save', {:class=>"submit"}
